<com.islaidunas.ui.view.CategoryManagerListItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/categoryListItem"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/back"
        android:tag="back"
        style="@style/categoryItemBackStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/simple_text"/>
        </RelativeLayout>
    <RelativeLayout
        android:id="@+id/front"
        android:tag="front"
        style="@style/categoryItemStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/cat_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/no_category"
            android:layout_alignTop="@+id/category_name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            style="@style/CategoryNameStyle"
            android:id="@+id/category_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/simple_text"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/cat_image"
            android:layout_toEndOf="@+id/cat_image" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">
            <TextView
                android:id="@+id/category_sign"
                style="@style/CategoryItemSmallText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/simple_text"
                android:layout_gravity="right"/>
            <TextView
                android:id="@+id/category_bucket"
                style="@style/CategoryItemSmallText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/long_sample_text"
                android:layout_gravity="right"
                android:textColor="@color/subText"/>
        </LinearLayout>
    </RelativeLayout>
   </com.islaidunas.ui.view.CategoryManagerListItemView>