<resources>
    <style name="SmallText">
        <item name="android:textSize">18sp</item>
        <item name="android:padding">2dp</item>
    </style>
    <style name="CategoryNameStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:textColor">@color/MainTextColor</item>
    </style>
    <style name="CategoryItemSmallText">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="SingleStringDropdownStyle" parent="SmallText"></style>
    <style name="SingleStringSpinnerStyle" parent="SmallText"></style>
</resources>
